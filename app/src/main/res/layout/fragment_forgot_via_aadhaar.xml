<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_top_round"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ivTopLogo"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >



            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_70"
                android:id="@+id/ivDDGKY"
                android:src="@drawable/ic_ddgky"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_70"
                android:id="@+id/ivRSETI"
                android:src="@drawable/ic_rseti"
                android:layout_marginStart="@dimen/dp_20"

                />

        </LinearLayout>



    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/progressBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:elevation="@dimen/dp_10"
        android:src="@drawable/ic_arrow_back_ios_new"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:fontFamily="@font/avenir_next_bold"
        android:gravity="center"
        android:text="@string/forgot_id_and_password"
        android:textColor="@color/color_dark_green"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/tvid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:fontFamily="@font/avenir_next_semi_bold"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/color_dark_green"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"

        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvid">

        <EditText
            android:id="@+id/etAadhaar"
            style="@style/EditText"
            android:layout_marginTop="@dimen/dp_50"
            android:drawableEnd="@drawable/close_eye"
            android:drawablePadding="@dimen/dp_10"
            android:hint="@string/aadhaar_number"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="12"
            android:paddingHorizontal="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcomeMsg" />



        <include
            android:id="@+id/aadhaarVerifyButton"
            layout="@layout/circular_button_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_gravity="end"
            android:elevation="@dimen/dp_10"
            android:enabled="false"
            android:visibility="gone"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llPass"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:padding="@dimen/dp_4"
                android:text="@string/newPass"
                android:textColor="@color/color_dark_green" />



            <EditText
                android:id="@+id/etnewPassword"
                style="@style/EditText"
                android:hint="@string/newPass"
                android:imeOptions="actionNext"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:padding="@dimen/dp_4"
                android:text="@string/confirmPass"
                android:textColor="@color/color_dark_green" />



            <EditText
                android:id="@+id/etconfirmPassword"
                style="@style/EditText"
                android:hint="@string/confirmPass"
                android:imeOptions="actionNext"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/tvconfirm"
                style="@style/Button"
                android:drawablePadding="@dimen/dp_20"
                android:layout_marginTop="@dimen/sp_16"
                android:text="@string/submit"
                app:drawableEndCompat="@drawable/ic_right_arrow"


                />


        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>