<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/circleImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CustomCircleShape"
        app:strokeColor="@color/color_dark_green"
        android:layout_gravity="center"
        app:strokeWidth="1dp"
        android:src="@drawable/person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tveKycComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="eKYC Completed"
        android:textColor="@color/color_dark_green"
        android:textSize="@dimen/dp_25" />

    <TextView
        android:id="@+id/tveKycSuccss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Successfull"
        android:textColor="@color/color_dark_green"
        android:textSize="@dimen/dp_25" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_80">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_30"
                android:text="Name:"
                android:textSize="@dimen/dp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eKYCCandidateName"
                android:fontFamily="@font/avenir_next_semi_bold"

                android:layout_marginStart="@dimen/dp_20"
                android:layout_gravity="center"
                android:text="Name"
                android:textColor="@color/color_dark_green"
                android:textSize="@dimen/dp_20" />


        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_5">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_30"
            android:text="CareOf:"
            android:textSize="@dimen/dp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eKYCCareOf"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_gravity="center"
            android:fontFamily="@font/avenir_next_semi_bold"
            android:text="Name"
            android:textColor="@color/color_dark_green"
            android:textSize="@dimen/dp_20" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_30"
            android:text="Gender:"
            android:textSize="@dimen/dp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eKYCGender"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_gravity="center"
            android:fontFamily="@font/avenir_next_semi_bold"
            android:text="Name"
            android:textColor="@color/color_dark_green"
            android:textSize="@dimen/dp_20" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_30"
            android:text="Date Of Birth:"
            android:textSize="@dimen/dp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eKYCDob"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_gravity="center"
            android:fontFamily="@font/avenir_next_semi_bold"
            android:text="Name"
            android:textColor="@color/color_dark_green"
            android:textSize="@dimen/dp_20" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvLogin"
        style="@style/Button"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:drawablePadding="@dimen/dp_20"
        android:text="Ok"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center" />



    </LinearLayout>



