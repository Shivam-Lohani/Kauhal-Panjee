<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/sp_20">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noTrainingImage"
        android:visibility="gone"
        android:src="@drawable/no_training"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No training center found"
        android:id="@+id/noTrainingTv"
        android:textSize="@dimen/sp_20"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textColor="@color/color_dark_green"
        android:fontFamily="@font/avenir_next_semi_bold"
        />

</LinearLayout>
