<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tvBankingCons"
        style="@style/editTextHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_15"
        android:elevation="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
>


        <LinearLayout
            android:id="@+id/llTopBanking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background_light_grey"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvBanking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:fontFamily="@font/avenir_next_semi_bold"
                android:text="@string/Banking_information"
                android:textColor="@color/color_dark_green"
                android:textSize="@dimen/sp_16"
                app:layout_constraintEnd_toStartOf="@+id/ivBankingArrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivBankingArrow"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_12"
                android:layout_weight="0.2"
                android:padding="@dimen/dp_4"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintBottom_toBottomOf="@+id/tvBanking"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvBanking"
                app:layout_constraintTop_toTopOf="@+id/tvBanking" />

        </LinearLayout>


        <View
            android:id="@+id/viewBanking"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_8"
            android:background="#F7F7F7"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llTopBanking" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandBanking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llTopBanking">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/llIfscCode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewBanking"
                tools:ignore="NotSibling">

                <!-- Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ifsc_code"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- EditText with custom background -->
                <EditText
                    android:id="@+id/etIfscCode"
                    style="@style/EditText"
                    android:hint="@string/enter_ifsc_code"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:maxLength="11"
                    android:inputType="textCapCharacters"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />
                <include
                    android:id="@+id/progressButton"
                    layout="@layout/circular_button_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:elevation="@dimen/dp_10"
                    android:layout_gravity="end"
                    tools:visibility="visible" />


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_next_demi_bold"
                    android:visibility="gone"
                    android:hint="Select Branch Name"
                    android:id="@+id/branchNameSelectUp"
                    android:padding="1dp"
                    android:textColorHint="@color/color_dark_green"
                    app:boxStrokeColor="@color/color_dark_green">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerBranchName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textColor="@color/color_dark_green"
                        android:textSize="15sp"
                        android:focusable="false"
                        tools:ignore="LabelFor" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/llBankName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llIfscCode"
                tools:ignore="NotSibling">

                <!-- Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_name"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- EditText with custom background -->
                <TextView
                    android:id="@+id/etBankName"
                    style="@style/EditText"
                    android:hint="@string/bank_name"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/llBranchName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llBankName"
                tools:ignore="NotSibling">

                <!-- Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/branch_name"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- EditText with custom background -->
                <TextView
                    android:id="@+id/etBranchName"
                    style="@style/EditText"
                    android:hint="@string/branch_name"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/llBankAcNo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llBranchName"
                tools:ignore="NotSibling">

                <!-- Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_account_number"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- EditText with custom background -->
                <EditText
                    android:id="@+id/etBankAcNo"
                    style="@style/EditText"
                    android:hint="@string/bank_account_number"
                    android:background="@drawable/edittext_background"
                    android:drawableEnd="@drawable/close_eye"
                    android:padding="12dp"
                    android:inputType="numberPassword"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/llPanNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llBankAcNo"
                tools:ignore="NotSibling">

                <!-- Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pan_no"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- EditText with custom background -->
                <EditText
                    android:id="@+id/etPanNumber"
                    style="@style/EditText"
                    android:hint="@string/enter_pan_no"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:maxLength="10"
                    android:textColor="@android:color/black"
                    android:inputType="textCapCharacters"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/btnBnakingSubmit"
                    style="@style/Button"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawablePadding="@dimen/dp_20"
                    android:text="@string/submit"
                    app:drawableEndCompat="@drawable/ic_right_arrow" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>